<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pu"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
               android:id="@+id/returnto"
                android:src="@drawable/ic_baseline_keyboard_return_24"


                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:text="Enter Train Details"
            />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="Train Name"
            />

        <EditText
            android:id="@+id/trainanmetext"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:textColorHint="#A6A0A0"
            android:theme="@style/myedittext"
            android:textColor="@color/white"


            android:minHeight="48dp"




            android:hint="Name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="Train Number"
            />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trainnumtext"
            android:layout_marginTop="16dp"
            android:textColorHint="#A6A0A0"
            android:padding="10dp"
            android:theme="@style/myedittext"
            android:textColor="@color/white"

            android:minHeight="48dp"


            android:hint="Number"
            />
        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20sp"
            android:text=" City"
            />
        <EditText
            android:id="@+id/traincitytext"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColorHint="#A6A0A0"
            android:theme="@style/myedittext"
            android:textColor="@color/white"

            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="10dp"
            android:hint="City"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="Destination"
            />
        <EditText
            android:id="@+id/traindestinationtext"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColorHint="#A6A0A0"
            android:theme="@style/myedittext"
            android:textColor="@color/white"
            android:padding="10dp"

            android:inputType="textEmailAddress"
            android:minHeight="48dp"

            android:hint="destination"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="Date of Arrival"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


        <Button
            android:id="@+id/idBtnPickDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/orange"
            android:layout_margin="20dp"
            android:text="Pick Date"
            android:textAllCaps="false" />
            <TextView
                android:id="@+id/idTVSelectedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_above="@id/idBtnPickDate"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <Button
            android:id="@+id/submitdatabtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="12dp"


            android:backgroundTint="@color/orange"
            android:text="Submit"

            android:layout_gravity="center"





            tools:ignore="MissingConstraints"
            />
    </LinearLayout>
</RelativeLayout>